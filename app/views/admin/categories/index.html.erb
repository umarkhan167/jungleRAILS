<section class="admin-categories-index">
<header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ Add New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <header class="page-header">
    <h2>Categories Available</h2>
  </header>
<div class="panel panel-default">
  <table class="table table-bordered">
    <thead>
    </thead>
    <tbody>
      <% @categories.each do |category|%>
      <tr>
        <td>
        <h4><%= "#{category.name}"%></h4>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</section>